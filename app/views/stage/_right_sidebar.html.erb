<div class="task_sidebar1 smaller_bark_font_method">
		<%if @user.tasks.blank?%>
						<table align="center"  height="55">
							<tr>
								<td width="40">
									<%=image_tag("task_sample.png")%>
								</td>
								<td>
									No Task
							  </td>
							</tr>
						</table>		
		<%else%>
		
				<%if @user.tasks.last.status == "inactive" or @user.enrolls.last.status == 0%>
						<table align="center"  height="55">
							<tr>
								<td width="40">
									<%=image_tag("task_sample.png")%>
								</td>
								<td>
									Task has ended
							  </td>
							</tr>
						</table>
    			<%else%>				
					<div class="enrolled_task_display">
								<%@recent_enrolled_task = @user.tasks.last%>								
								<%if ((@recent_enrolled_task.end_date.to_date - DateTime.now.to_date).to_i) < 1%>
									<table align="center"  height="55">
										<tr>
											<td width="40">
												<%=image_tag("task_sample.png")%>
											</td>
											<td>
												Task has ended
											</td>
										</tr>
									</table>									
								<%else%>
									<div class="task_timer">
										<%@duration=(@recent_enrolled_task.end_date.to_date - DateTime.now.to_date).to_i %>
										<%@position = Task.task_table(12,@user.id)%>
										<%if @position == "blank"%>
											<!--no contest-->
										<%else%>
											<%=@position.ordinalize%>
										<%end%>
									</div>													
									<%if @duration > 1%>			
										<%=@duration%> days remaining for task											
									<%else%>					
										<%=@duration%> day remaining for task											
									<%end%>
							 <%end%>	
					</div>					
				<%end%>
		<%end%>
</div>

