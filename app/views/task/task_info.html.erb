<div class="facebox_header">
	Task
</div>

<div class="task_info">
	<table border="0",align="center" cellspacing="10">
		<tr>
			<td>
				<%=image_tag("task_small.png")%>
			</td>
			<td>
				A task is an optional challenge to accomplish certain objectives. 
				This list contains all the available tasks. 
			</td>
		</tr>
	</table>
	<div class="task_list">
		<div class="task_list_header">
			list of tasks
		</div>		
		<%@count = 1%>
		<%for task in @user_task%>					
			<div class="task_count">
				<%=@count%>
			</div>
			<div class="task_details">
				<div class="task_title">
					<%=task.title%>
				</div>
				<div class="task_description">
					<%=task.description%>
				</div>
				<div class="task_duration">
					Duration
					<p>
						<%=task.start_date.strftime("%B %d, %Y")%>
						&nbsp; - &nbsp; 	
						&nbsp;<%=task.end_date.strftime("%B %d, %Y")%>
					</p>	
				</div>
				<p></p>	
				<div class="task_reward">
					<span class="light_green_font--small">
						<%=task.task_reward%>
					</span>
					<span class="bold_grey_font">
						Reward points
					</span>
				</div> 		
				<div class="task_interest">
					#<%=task.label.interest.interest_name%>
				</div>
				<div class=" task_interest_link primary_link_font">
					<%=link_to "Click if Interest?", task_path(:id=>task.label.interest.interest_name)%>
				</div> 
			</div>
			<%@count = @count + 1%>
		<%end%>	
	</div>		
</div>
